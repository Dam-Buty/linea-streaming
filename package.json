{
  "name": "linea-streaming",
  "version": "1.0.0",
  "description": "A simple method to host linear streaming channels",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dam-Buty/linea-streaming"
  },
  "bugs": {
    "url": "https://github.com/Dam-Buty/linea-streaming/issues"
  },
  "homepage": "https://github.com/Dam-Buty/linea-streaming#readme",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "processor:build": "docker build -f Dockerfile.processor -t linea-processor .",
    "script:encode": "docker compose run --remove-orphans processor encode",
    "script:playlist": "docker compose run --remove-orphans processor playlist",
    "script:convert-images": "docker compose run --remove-orphans processor convert-images"
  },
  "keywords": [
    "streaming",
    "television"
  ],
  "author": "Dam-Buty",
  "license": "ISC",
  "dependencies": {
    "@clack/prompts": "^0.10.1",
    "ffmpeg-progressbar-cli": "^1.5.0",
    "ffprobe-client": "^1.1.6",
    "lodash": "^4.17.21",
    "picocolors": "^1.1.1"
  }
}
